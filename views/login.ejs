<!DOCTYPE html>
<html>
<head>
	<% include header.ejs %>

	<style>
	body {
		background: url('/images/login_back.jpg');
		overflow: hidden; 
	}

	.row {
		margin-bottom: 5px;
	}

	input[type=password]:not(.browser-default), input[type=text]:not(.browser-default) {
		border-bottom: 1px solid #000;
	}

	input[type=text]:not(.browser-default):focus:not([readonly]), input[type=password]:not(.browser-default):focus:not([readonly]) {
		border-bottom: 1px solid #000;
		box-shadow: 0 0.3px 0 0 #000;
	}

	input[type=text]:not(.browser-default):focus:not([readonly])+label, input[type=password]:not(.browser-default):focus:not([readonly])+label {
		color: #000;
	}

	.input-field>label, .input-field .prefix.active {
		color: #000;
	}

</style>
</head>
<% include loading.ejs %>
<body>
	<div class="container">
		<form action="">
			<div class="row" style="margin-top:22%;">
				<div class="col s3"></div>
				<div class="col s6">
					<div class="card transparent_card hoverable circle_card_big" style="margin-left:14%;">
						<div style="padding-top:12%">
							<div class="row">
								<h2 class="cur_font center-align text-margin">Login</h2>
							</div>
							<div class="row">
								<div class="col s1"></div>
								<div class="col s10">
									<div class="input-field col s12">
										<i class="material-icons prefix">face</i>
										<input id="text" type="text" class="text_fields" style="font-weight: bold;">
										<label for="text" class="login_font">Username</label>
									</div>
								</div>
								<div class="col s1"></div>
							</div>
							<div class="row">
								<div class="col s1"></div>
								<div class="col s10">
									<div class="input-field col s12">
										<i class="material-icons prefix">lock</i>
										<input id="password" type="password">
										<label for="password" class="login_font">Password</label>
									</div>
								</div>
								<div class="col s1"></div>
							</div>
							<div class="row">
								<div class="col s3"></div>
								<div class="col s8">
									<div class=" hvr-icon-wobble-vertical">
										<button class="btn waves-effect waves-light hvr-icon" type="submit" name="submit">Submit
											<i class="material-icons right hvr-icon">send</i>
										</button>&nbsp;&nbsp;&nbsp;
									</div>
									<div class=" hvr-icon-wobble-vertical">
										<a href="/">
											<button class="btn waves-effect waves-light red hvr-icon" type="reset" name="reset">Cancel
												<i class="material-icons right hvr-icon">close</i>
											</button>
										</a>
									</div>
								</div>
								<div class="col s3"></div>
							</div>
						</div>
					</div>
				</div>
				<div class="col s3 center-align" style="margin-top:30%; margin-left: -5%">
					<a href="/register">
						<div class="waves-effect waves-orange card hoverable circle_card small transparent_card hvr-signup hvr-buzz" style="margin-left:0%;">
							<h4 class="cur_font circle_text">Sign Up</h4>
						</div>
					</a>
				</div>
			</div>
		</form>
	</div>
</body>
</html>
